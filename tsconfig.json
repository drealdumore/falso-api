{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017", "dom"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmitOnError": true,
    "checkJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "types": ["node", "express", "morgan", "body-parser"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
